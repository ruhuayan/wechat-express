
<div class="weui-form">
    <div class="weui-form__text-area">
        <h2 class="weui-form__title">{{title}}</h2>
    </div>
</div>

<div class="page__bd">
    <div class="weui-cells__title">等待确认的订单：</div>
    <div class="weui-cells">
        {{#each orders}}
        <div class="weui-cell">
            <div class="weui-cell__bd">
                <p>{{_id}}</p>
            </div>
            <div class="weui-cell__ft">
                <a href="/order/{{_id}}">查看</a>
            </div>
        </div>
        {{/each}}
        {{#unless orders}} 
        <div class="weui-cells__title">无订单</div>
        {{/unless}}
    </div>
</div>