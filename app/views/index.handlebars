{{#section 'style'}}
<style>
    .page__content {
        margin: 16px 0;
    }
    .page__content .weui-grid__label {
        color: var(--theme-color);
    }
</style>
{{/section}}
<div class="weui-form">
    <div class="weui-form__text-area">
        <h2 class="weui-form__title">海运拼箱</h2>
        <div class="weui-form__desc">{{title}}</div>
    </div>
</div>
<div class="weui-grids page__content">
    <a href="/register_parcel" class="weui-grid">
        <div class="weui-grid__icon">
            <img src="/img/register.svg" alt="包裹登记">
        </div>
        <p class="weui-grid__label">我要下单</p>
    </a>
    <a href="/warehouse" class="weui-grid">
        <div class="weui-grid__icon">
            <img src="/img/warehouse.svg" alt="仓库地址">
        </div>
        <p class="weui-grid__label">仓库地址</p>
    </a>
    <a href="/cost-calculate" class="weui-grid">
        <div class="weui-grid__icon">
            <img src="/img/cost.svg" alt="运费预估">
        </div>
        <p class="weui-grid__label">运费预估</p>
    </a>
    <a href="/search" class="weui-grid">
        <div class="weui-grid__icon">
            <img src="/img/search.svg" alt="我要查件">
        </div>
        <p class="weui-grid__label">我要查件</p>
    </a>
    <a href="javascript:;" class="weui-grid">
        <div class="weui-grid__icon">
            <img src="/img/maps.svg" alt="自提点">
        </div>
        <p class="weui-grid__label">自提点</p>
    </a>
    <a href="/faq" class="weui-grid">
        <div class="weui-grid__icon">
            <img src="/img/question.svg" alt="常见问题">
        </div>
        <p class="weui-grid__label">常见问题</p>
    </a>
    
</div>

<div class="page__bd">
    <div class="weui-cells__title">你目前的订单：</div>
    <div class="weui-cells">
        {{#each orders}}
        <div class="weui-cell">
            <div class="weui-cell__bd">
                <p>{{_id}}</p>
            </div>
            <div class="weui-cell__ft">
                <a href="/order/{{_id}}">查看</a>
            </div>
        </div>
        {{/each}}
        {{#unless orders}} 
        <div class="weui-cells__title">无订单</div>
        {{/unless}}
    </div>
</div>